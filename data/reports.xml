<?xml version="1.0"?>
<openerp>
	<data noupdate="0">

	    <report
			auto="False"
			id="account.account_invoices"
			model="account.invoice"
			name="ar.account.invoice"
			rml="l10n_ar_invoice/report/invoice.rml"
			string="Invoice"
			header="False"
			attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/',''))"
			attachment_use="0"/>

	    <report
			auto="False"
			id="account.account_invoices_with_header"
			model="account.invoice"
			name="ar.account.invoice.with.header"
			rml="l10n_ar_invoice/report/invoice.rml"
			string="Invoices with Header"
			header="False"
			attachment="(object.state in ('open','paid')) and ('DOC'+(object.number or '').replace('/',''))"
			attachment_use="0"/>

	</data>
</openerp>
